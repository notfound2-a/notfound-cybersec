<script>
    // Animasi typing
    const texts=["Cybersecurity Enthusiast","Penetration Tester","Network Security Specialist","Malware Analyst"];
    let count=0,index=0,currentText='',letter='';
    function type(){
        if(count===texts.length) count=0;
        currentText=texts[count];
        letter=currentText.slice(0,++index);
        document.getElementById('typing').textContent=letter;
        if(letter.length===currentText.length){
            setTimeout(()=>{index=0; count++; type();},1500);
        }else{setTimeout(type,150);}
    }
    type();

    // Animasi scroll
    const sections=document.querySelectorAll('section');
    window.addEventListener('scroll',()=>{
        const scrollY=window.scrollY+window.innerHeight;
        sections.forEach(sec=>{
            if(scrollY>sec.offsetTop+100){sec.classList.add('visible');}
        });
    });
</script>

